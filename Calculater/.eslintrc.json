{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "no-use-before-define": "error",
        "linebreak-style": 0,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": [2, "double"],
        "comma-dangle": [2, "always-multiline"],
        "no-restricted-globals": ["error", "event", "fdescribe"]
    }
}
